// Zellij Configuration - Optimized for Remote Development
// Persistent sessions that survive disconnects

// Theme matching your terminal aesthetic
theme "kanagawa"

// Simplified UI
pane_frames false
simplified_ui false  // Set to true to hide keybinding hints

// Mouse support
mouse_mode true
scroll_buffer_size 10000

// Copy on select (like modern terminals)
copy_on_select true

// Session behavior
default_layout "default"  // Shows keybindings bar (was "compact")
default_shell "zsh"

// Auto-attach to session if exists
session_serialization false
pane_viewport_serialization false

// Keybindings - keep all defaults, just remap lock to avoid Ctrl+g conflict with Claude Code
keybinds {
    shared_except "locked" {
        // Remove default Ctrl+g for lock
        unbind "Ctrl g"
        // Add Ctrl+\ for lock instead
        bind "Ctrl \\" { SwitchToMode "Locked"; }
    }

    locked {
        // Remove default Ctrl+g unlock
        unbind "Ctrl g"
        // Add Ctrl+\ unlock instead
        bind "Ctrl \\" { SwitchToMode "Normal"; }
    }
}
